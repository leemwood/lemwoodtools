<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme for night mode -->
    <style name="Theme.LemwoodTools" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Primary colors -->
        <item name="colorPrimary">@color/lemwood_primary_dark</item>
        <item name="colorOnPrimary">@color/lemwood_on_primary_dark</item>
        <item name="colorPrimaryContainer">@color/lemwood_primary_container_dark</item>
        <item name="colorOnPrimaryContainer">@color/lemwood_on_primary_container_dark</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/lemwood_secondary_dark</item>
        <item name="colorOnSecondary">@color/lemwood_on_secondary_dark</item>
        <item name="colorSecondaryContainer">@color/lemwood_secondary_container_dark</item>
        <item name="colorOnSecondaryContainer">@color/lemwood_on_secondary_container_dark</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/lemwood_tertiary_dark</item>
        <item name="colorOnTertiary">@color/lemwood_on_tertiary_dark</item>
        <item name="colorTertiaryContainer">@color/lemwood_tertiary_container_dark</item>
        <item name="colorOnTertiaryContainer">@color/lemwood_on_tertiary_container_dark</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/lemwood_error_dark</item>
        <item name="colorOnError">@color/lemwood_on_error_dark</item>
        <item name="colorErrorContainer">@color/lemwood_error_container_dark</item>
        <item name="colorOnErrorContainer">@color/lemwood_on_error_container_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/lemwood_background_dark</item>
        <item name="colorOnBackground">@color/lemwood_on_background_dark</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/lemwood_surface_dark</item>
        <item name="colorOnSurface">@color/lemwood_on_surface_dark</item>
        <item name="colorSurfaceVariant">@color/lemwood_surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/lemwood_on_surface_variant_dark</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">@color/lemwood_outline_dark</item>
        <item name="colorOutlineVariant">@color/lemwood_outline_variant_dark</item>
    </style>
</resources>